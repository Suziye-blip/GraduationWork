<h1>この人だ～れだ！</h1>
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
</head>
<body>
    <%= form_with(url: game_path, method: :post) do |form| %>
        <label for="subject">その人の</label>
        <%= form.text_field :subject, id: "subject", placeholder: "年齢", required: true, size: 8 %>
        <label for="predicate">は</label>
        <%= form.text_field :predicate, id: "predicate", placeholder: "20", required: true, size: 8 %>
        <label>ですか？</label>
        <br><br>
        <%= form.submit "質問する" %>

        <%= link_to "ギブアップ", giveup_game_path, class: "btn-giveup", data: { confirm: "本当にギブアップしますか？" } %>

    <% end %>
</body>
</html>

<table class="info-table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, "名前")%></th>
      <th><%= sort_link(@q, :gender, "性別")%></th>
      <th><%= sort_link(@q, :age, "年齢")%></th>
      <th><%= sort_link(@q, :grade, "学年")%></th>
      <th><%= sort_link(@q, :address, "住所")%></th>
      <th><%= sort_link(@q, :faculty, "学部")%></th>

    </tr>
  </thead>
  <tbody>
    <% @hints.each do |hint| %>
      <tr>
        <td><%= hint.name %></td>
        <td><%= hint.human_readable_gender %></td>
        <td><%= hint.age %></td>
        <td><%= hint.grade %></td>
        <td><%= hint.address %></td>
        <td><%= hint.faculty %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
.info-table {
  width: 50%; /* ここはお好みで80%などに広げてもOK */
  min-width: 600px; /* あまりに細くなりすぎるのを防ぐ */
  border-collapse: collapse;
  margin-top: 20px;
 }

  /* スマホなど画面幅が768px以下のとき */
@media screen and (max-width: 768px) {
  .info-table {
    width: 100%; /* 画面いっぱいに広げる */
    min-width: auto;
    display: block; /* テーブルをはみ出させないための魔法 */
    overflow-x: auto; /* 横に長い場合はスクロール可能にする */
    white-space: nowrap; /* 文字の折り返しを防いで見やすくする */
  }
}

  .info-table th, .info-table td {
    border: 1px solid #ddd;
    padding: 2px 4px;
    text-align: left;
  }

.btn-base, input[type="submit"], .btn-giveup {
  display: inline-block;
  padding: 5px 10px;
  text-decoration: none;
  border-radius: 4px;
  border: 1px solid #ccc;
  cursor: pointer;
  font-size: 14px;
}

input[type="submit"] {
  background-color: #007bff;
  color: white;
  border-color: #0069d9;
}
input[type="submit"]:hover {
  background-color: #0069d9;
}

.btn-giveup {
  background-color: #e0e0e0;
  color: #333;
  margin-left: 10px;
}
.btn-giveup:hover {
  background-color: #d0d0d0;
}
</style>
